{
  "mcpServers": {
    "cobalt-strike": {
      "command": "python",
      "args": [
        "cs_mcp.py",
        "--username", "your_cs_username",
        "--password", "your_cs_password",
        "--insecure",
        "--listen-host", "127.0.0.1",
        "--listen-port", "3000",
        "--server-name", "Cobalt Strike API",
        "--instructions", "This server provides access to Cobalt Strike REST API endpoints for red team operations. Available tools include beacon management (list, remove, execute commands), payload generation, listener management, and file operations. Always verify target authorization before operations."
      ],
      "cwd": "/path/to/cs-mcp",
      "env": {
        "CS_API_USERNAME": "your_cs_username",
        "CS_API_PASSWORD": "your_cs_password",
        "CS_API_BASE_URL": "https://localhost:50443",
        "CS_API_VERIFY_TLS": "false",
        "LOG_LEVEL": "INFO",
        "FASTMCP_EXPERIMENTAL_ENABLE_NEW_OPENAPI_PARSER": "true"
      }
    }
  }
}